#include <ESP8266WiFi.h>
#include <ESP8266HTTPClient.h>
#include <ArduinoJson.h>

// WiFi Parameters
const char* ssid = "K";
const char* password = "kise4110";

void setup() {
  Serial.begin(115200);
  WiFi.begin(ssid, password);
 
  while (WiFi.status() != WL_CONNECTED) {
    delay(1000);
    Serial.println("Connecting...");
  }
//  pinMode(D7, OUTPUT);
  pinMode(2, OUTPUT);
//  digitalWrite(D7, 0);
 
 
}

void loop() {
  // Check WiFi Status
  if (WiFi.status() == WL_CONNECTED) {
    HTTPClient http;  //Object of class HTTPClient
    http.begin("http://eaten.000webhostapp.com/authentication/status.php?id=1");
    int httpCode = http.GET();
    //Check the returning code                                                                  
    if (httpCode > 0) {
      // Parsing
      const size_t bufferSize = JSON_OBJECT_SIZE(2) + JSON_OBJECT_SIZE(3) + JSON_OBJECT_SIZE(5) + JSON_OBJECT_SIZE(8) + 370;
      DynamicJsonDocument  jsonBuffer(bufferSize);
      deserializeJson(jsonBuffer, http.getString());
      int id = jsonBuffer["id"]; // 1
      const char* state = jsonBuffer["status"]; 
      Serial.print("ID:");
      Serial.println(id);
      Serial.print("Status:");
      Serial.println(state);
      String led = jsonBuffer["status"];
      digitalWrite(2, LOW); 
      delay(200);   
      digitalWrite(2, HIGH);  
      delay(200);                         
      if (led=="ON" ){ 
        //digitalWrite(D7, 1);  
            Serial.print("ON");       
          }
  else {
      //digitalWrite(D7, 0); 
      Serial.print("OFF");
    }     
    }
    http.end(); 
  }
  delay(200);
}
